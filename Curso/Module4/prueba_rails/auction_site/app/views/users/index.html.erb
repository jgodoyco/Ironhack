<h1>Users</h1>
<p>Users List</p>

<ul>
	<% @users.each do |user| %>
		<li> <a href="/users/<%= user.id %>"> <%= user.name %></a> - 
			<% if user.email.present? %>
				<%= user.email %> -
				<%= user.created_at %> - 
				<%= link_to('User Products', user_products_path(user.id),
				method: :get ) %> -
				<%= link_to('Delete User', user_path(user.id),
				method: :delete, data: {confirm: 'Are you sure?'}) %>
			<% end%> 
		</li>
	<% end %>
</ul>

<p>	<a href="/users/new">Add new user</a></p>